{% extends 'base.html.twig' %}

{% block title %}Welcome{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center mt-4">Welcome to the Shop!</h1>

    {% if app.user %}
        <div class="d-flex justify-content-between align-items-center mb-3">
            <p>Hello {{ app.user.email }}!</p>
            <a href="{{ path('app_logout') }}" class="btn btn-outline-danger">Logout</a>
            <a href="{{ path('app_catalog') }}" class="btn btn-primary">Catalog</a>
            <a href="{{ path('app_cart') }}" class="btn btn-outline-primary">Cart</a>
        </div>
    {% else %}
        <div class="d-flex justify-content-between align-items-center mb-3">
            <a href="{{ path('app_login') }}" class="btn btn-primary">Log in</a>
            <a href="{{ path('app_register') }}" class="btn btn-outline-secondary">Register</a>
        </div>    
    {% endif %}
</div> 
{% endblock %}
