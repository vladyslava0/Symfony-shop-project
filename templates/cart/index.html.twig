{% extends 'base.html.twig' %}

{% block title %}Cart{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>Shopping Cart</h1>
        <a href="{{ path('app_logout') }}" class="btn btn-outline-danger">Logout</a>
        <a href="{{ path('app_catalog') }}" class="btn btn-outline-primary">Catalog</a>
    </div>

    {% if items is empty %}
        <p>Your cart is empty.</p>
    {% else %}
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Subtotal</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% for item in items %}
                    <tr>
                        <td>{{ item.name }}</td>
                        <td>${{ item.price|number_format(2, '.', ',') }}</td>
                        <td>
                            <form action="{{ path('cart_update', {id: item.id}) }}" method="post">
                                <input type="number" name="quantity" value="{{ item.quantity }}" min="1" max="{{ item.available }}">
                                <button class="btn btn-outline-primary btn-sm">Update</button>
                            </form>
                        </td>
                        <td>${{ item.subtotal|number_format(2, '.', ',') }}</td>
                        <td>
                            <a href="{{ path('cart_remove', {id: item.id}) }}" class="btn btn-danger btn-sm">Remove</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <h4 class="mt-3">Total: ${{ total|number_format(2, '.', ',') }}</h4>
        <a href="{{ path('cart_checkout') }}" class="btn btn-success mt-3">Place Order</a>
    {% endif %}

    <hr class="my-5">
    <h2>Order History</h2>

    {% if orders is empty %}
        <p>No previous orders.</p>
    {% else %}
        {% for order in orders %}
            <div class="border rounded p-3 mb-3">
                <strong>Order #{{ order.id }}</strong> — {{ order.date|date('Y-m-d H:i') }}
                <ul>
                    {% for item in order.orderItems %}
                        <li>
                            {{ item.item.name }}
                            — {{ item.quantityOrdered }} pcs
                            — ${{ item.price|number_format(2, '.', ',') }} each
                        </li>
                    {% endfor %}
                </ul>
            </div>
        {% endfor %}
    {% endif %}
</div>
{% endblock %}
